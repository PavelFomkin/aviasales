<!DOCTYPE web-app PUBLIC
  "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
  "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>Archetype Created Web Application</display-name>
  <context-param>
    <param-name>credentials</param-name>
    <param-value>credentials.properties</param-value>
  </context-param>
  <!--CharsetFilter start-->
  <filter>
    <filter-name>CharsetFilter</filter-name>
    <filter-class>com.epam.aviasales.util.CharsetFilter</filter-class>
    <init-param>
      <param-name>requestEncoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharsetFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <!--DEFAULT LANGUAGE-->
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.fallbackLocale</param-name>
    <param-value>en</param-value>
  </context-param>
  <!-- MAIN PAGE -->
  <!--
  Servlet: com.epam.aviasales.controllers.MainServlet
  Is configured by annotation for correct work as root
  -->
  <!-- LOGIN -->
  <servlet>
    <servlet-name>loginServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <!-- REGISTER -->
  <servlet>
    <servlet-name>registerServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>registerServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <!-- FLIGHTS -->
  <servlet>
    <servlet-name>flightsServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.FlightServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>flightsServlet</servlet-name>
    <url-pattern>/flights</url-pattern>
  </servlet-mapping>
  <!-- TICKET -->
  <servlet>
    <servlet-name>ticketServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.TicketServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ticketServlet</servlet-name>
    <url-pattern>/ticket</url-pattern>
  </servlet-mapping>
  <!-- MANAGE FLIGHTS -->
  <servlet>
    <servlet-name>manageFlightsServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.ManageFlightsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>manageFlightsServlet</servlet-name>
    <url-pattern>/manage/flights</url-pattern>
  </servlet-mapping>
  <!-- MANAGE AIRPORTS -->
  <servlet>
    <servlet-name>manageAirportsServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.ManageAirportsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>manageAirportsServlet</servlet-name>
    <url-pattern>/manage/airports</url-pattern>
  </servlet-mapping>
  <!-- MANAGE AIRPLANES -->
  <servlet>
    <servlet-name>manageAirplanesServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.ManageAirplanesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>manageAirplanesServlet</servlet-name>
    <url-pattern>/manage/airplanes</url-pattern>
  </servlet-mapping>
  <!-- MANAGE TICKETS -->
  <servlet>
    <servlet-name>manageTicketsServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.ManageTicketsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>manageTicketsServlet</servlet-name>
    <url-pattern>/manage/tickets</url-pattern>
  </servlet-mapping>
  <!-- MANAGE ACCOUNTS -->
  <servlet>
    <servlet-name>manageAccountsServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.ManageAccountsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>manageAccountsServlet</servlet-name>
    <url-pattern>/manage/accounts</url-pattern>
  </servlet-mapping>
  <!-- MANAGE PERSONAL DATA -->
  <servlet>
    <servlet-name>managePersonalDataServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.ManagePersonalDataServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>managePersonalDataServlet</servlet-name>
    <url-pattern>/manage/personals</url-pattern>
  </servlet-mapping>
  <!-- MANAGE -->
  <servlet>
    <servlet-name>manageServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.ManageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>manageServlet</servlet-name>
    <url-pattern>/manage</url-pattern>
  </servlet-mapping>
  <!-- CONFIRMATION -->
  <servlet>
    <servlet-name>confirmationServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.ConfirmationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>confirmationServlet</servlet-name>
    <url-pattern>/confirm</url-pattern>
  </servlet-mapping>
  <!-- PROFILE -->
  <servlet>
    <servlet-name>ProfileServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.ProfileServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProfileServlet</servlet-name>
    <url-pattern>/profile</url-pattern>
  </servlet-mapping>
  <!-- SING OUT -->
  <servlet>
    <servlet-name>SignOutServlet</servlet-name>
    <servlet-class>com.epam.aviasales.controllers.SignOutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignOutServlet</servlet-name>
    <url-pattern>/signout</url-pattern>
  </servlet-mapping>
</web-app>
